<Window x:Class="WPF_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Client"
        mc:Ignorable="d"
        Title="BikesnScooters" Height="650" Width="1000">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            
        </Grid.ColumnDefinitions>
        <ListBox ItemsSource="{Binding Bikes}" SelectedItem="{Binding SelectedBike}" Grid.Column="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Model}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox ItemsSource="{Binding Scooters}" Grid.Column="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Model }"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox ItemsSource="{Binding Brands}" Grid.Column="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding BrandName}" />
                        <Label Content="{Binding Id}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <StackPanel Grid.Column="3" >
            <Button Content="Create Bike" Command="{Binding CreateBike}" Margin="10" Padding="10"/>
            <Button Content="Update Bike" Command="{Binding UpdateBike}" Margin="10" Padding="10"/>
            <Button Content="Delete Bike" Command="{Binding DeleteBike}" Margin="10" Padding="10"/>
            <Label Content="Modell" Background="AliceBlue"/>
            <TextBox Text="{Binding SelectedBike.Model}"/>
            <Label Content="Brand" Background="AliceBlue"/>
            <TextBox Text="{Binding SelectedBike.Brand.BrandName}"/>
            <Label Content="Rating" Background="AliceBlue"/>
            <TextBox Text="{Binding SelectedBike.Rating}"/>
            <Label Content="Price" Background="AliceBlue"/>
            <TextBox Text="{Binding SelectedBike.Price}"/>
            
        </StackPanel>
    </Grid>
</Window>
